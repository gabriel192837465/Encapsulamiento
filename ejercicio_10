class Circulo():
    def __init__(self, radio):
        self._radio = radio
    
    def setRadio(self, nuevoRadio):
        if (nuevoRadio >= 0):
            self._radio = nuevoRadio
            return True
        else:
            return False
        
    def calcularArea(self):
        area = 3.1416*(self._radio**2)
        return area

        
    def calcularCircunferencia(self):
        circunferencia = 2*(3.1416 * self._radio)
        return circunferencia

    def mostrarInfo(self):
        return (f"Radio: {self._radio}")

if __name__ == "__main__":
    circulo1 = Circulo(0)
    radio = int(input("Ingrese el radio del circulo: "))
    
    if (circulo1.setRadio(radio)):
        print(f"""Radio ingresado con exito
        {circulo1.mostrarInfo()}
        √Årea: {circulo1.calcularArea()}
        Circunferencia: {circulo1.calcularCircunferencia()}""")
    else:
        print("El radio no puede ser negativo")
